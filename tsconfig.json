{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": ["src/index.ts", "src/cli.ts", "types", "src/sortCli.ts"],
  "exclude": ["**/node_modules"]
}
